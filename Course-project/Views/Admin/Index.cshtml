@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewBag.Title = "List of Users";
}
<h2>@Localizer["ListOfUsers"]</h2>
<form id='form1' method="post">
    <button type="submit" class="btn btn-primary m-1" asp-controller="Admin" asp-action="Delete">@Localizer[""]</button>
    <button type="submit" class="btn btn-primary m-1" asp-controller="Admin" asp-action="Block">@Localizer["BtnBlock"]</button>
    <button type="submit" class="btn btn-primary m-1" asp-controller="Admin" asp-action="UnBlock">@Localizer["BtnUnBlock"]</button>

    <table class="table table-striped table-hover">
        <tr>
            <th>@Localizer["Email"]</th>
            <th>@Localizer["Name"]</th>
            <th>@Localizer["Roles"]</th>
            <th>@Localizer["Status"]</th>
            <th><input type="checkbox" name="cb_all"></th>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td><a asp-controller="Profile" asp-action="Index" asp-route-userid="@user.Id">@user.UserName</a></td>
                <td><a class="btn btn-sm btn-primary text-center" asp-controller="Roles" asp-action="Edit" asp-route-userid="@user.Id">@Localizer["Roles"]</a></td>
                <td>@user.Status</td>
                <td><input type="checkbox" class="qwe" name="selectedUsers" value="@user.UserName" /></td>
            </tr>
        }
    </table>
</form>
<a class="btn btn-sm btn-primary" asp-controller="Roles" asp-action="Create">@Localizer["BtnAddRole"]</a>
<a class="btn btn-sm btn-primary" asp-controller="Roles" asp-action="Index">@Localizer["BtnRolesList"]</a>

<script>
    var f = document.getElementById('form1');
    f.cb_all.onchange = function (e) {
        var el = e.target || e.srcElement;
        var qwe = el.form.getElementsByClassName('qwe');
        for (var i = 0; i < qwe.length; i++) {
            if (el.checked) {
                qwe[i].checked = true;
            } else {
                qwe[i].checked = false;
            }
        }
    }
</script>
