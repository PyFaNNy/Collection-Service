@model Course_project.Models.User
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<div class="container">
    <div class="row my-2">
        <div class="col-lg-8 order-lg-2">
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a href="" data-target="#profile" data-toggle="tab" class="nav-link active">@Localizer["Profile"]</a>
                </li>
                <li class="nav-item">
                    <a href="" data-target="#edit" data-toggle="tab" class="nav-link">@Localizer["Info"]</a>
                </li>
            </ul>
            <div class="tab-content py-4">
                <div class="tab-pane active" id="profile">
                    <h5 class="mb-3">@Localizer["UserProfile"]</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <h6>@Localizer["About"]</h6>
                            <p>
                                Web Designer, UI/UX Engineer
                            </p>
                            <h6>@Localizer["Hobbies"]</h6>
                            <p>
                                Indie music, skiing and hiking. I love the great outdoors.
                            </p>
                            <a asp-controller="Profile" asp-action="Index" asp-route-sortOrder="@ViewBag.ThemeSort" asp-route-name="@ViewBag.User.UserName">@Localizer["Collections"]</a>
                        </div>
                        <div class="col-md-12">
                            <h5 class="mt-2"><span class="fa fa-clock-o ion-clock float-right"></span>@Localizer["RecentActivity"]</h5>
                            <table class="table table-sm table-hover table-striped">
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="edit">
                    <form method="post" asp-controller="Profile" asp-action="Edit" asp-route-userId="@ViewBag.User.Id">
                        <div class="form-group row">
                            <label asp-for="FirstName" class="col-lg-3 col-form-label form-control-label">@Localizer["FirstName"]</label>
                            <div class="col-lg-9">
                                <input asp-for="FirstName" class="form-control" type="text" value="@ViewBag.User.FirstName">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="LastName" class="col-lg-3 col-form-label form-control-label">@Localizer["LastName"]</label>
                            <div class="col-lg-9">
                                <input asp-for="LastName" class="form-control" type="text" value="@ViewBag.User.LastName">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Email" class="col-lg-3 col-form-label form-control-label">@Localizer["Email"]</label>
                            <div class="col-lg-9">
                                <input asp-for="Email" class="form-control" type="email" value="@ViewBag.User.Email">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="UserName" class="col-lg-3 col-form-label form-control-label">@Localizer["UserName"]</label>
                            <div class="col-lg-9">
                                <input asp-for="UserName" class="form-control" type="text" value="@ViewBag.User.UserName">
                            </div>
                        </div>
                        @*<div class="form-group row">
                                <label asp-for="Password" class="col-lg-3 col-form-label form-control-label">@Localizer["Password"]</label>
                                <div class="col-lg-9">
                                    <input asp-for="Password" class="form-control" type="password" value="@Model.LastName">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="ConfirmPassword" class="col-lg-3 col-form-label form-control-label">@Localizer["ConfirmPassword"]</label>
                                <div class="col-lg-9">
                                    <input asp-for="ConfirmPassword" class="form-control" type="password" value="@Model.LastName">
                                </div>
                            </div>*@
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label form-control-label"></label>
                            <div class="col-lg-9">
                                @if (User.Identity.Name.Equals(ViewBag.User.UserName))
                                {
                                    <button type="submit" class="btn btn-primary">@Localizer["BtnChanges"]</button>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-lg-4 order-lg-1 text-center">
            <img src="@ViewBag.User.UrlImg" class="mx-auto img-fluid img-circle d-block" alt="avatar">
            <h6 class="mt-2">@Localizer["UploadPhoto"]</h6>
            <form method="post" asp-controller="Profile" asp-action="Edit" asp-route-userId="@ViewBag.User.Id">
                <label class="custom-file">
                    <input type="file" asp-for="Img" class="custom-file-input">
                    <span class="custom-file-control">@Localizer["ChooseFile"]</span>
                </label>
            </form>
        </div>
    </div>
</div>