@model Course_project.Models.Collection
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<h2>@Localizer["NewColl"]</h2>
<form method="post" enctype="multipart/form-data" asp-controller="Collections" asp-action="Edit" asp-route-collectionId="@ViewBag.Collection.Id">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="col-md-4">
        <div class="form-group">
            <label asp-for="Name">@Localizer["Name"]</label><br />
            <input asp-for="Name" value="@ViewBag.Collection.Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Theme">@Localizer["Theme"]</label><br />
            <select asp-for="Theme" class="form-control">
                <option value="Books">@Localizer["Books"]</option>
                <option value="Money">@Localizer["Money"]</option>
                <option value="Guns">@Localizer["Guns"]</option>
                <option value="Stamps">@Localizer["Stamps"]</option>
                <option value="Alcohol">@Localizer["Alcohol"]</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Summary">@Localizer["Summary"]</label><br />
            <textarea class="form-control" rows="3" asp-for="Summary">@ViewBag.Collection.Summary.ToString()</textarea>
        </div>
        @*<dl class="row">
                <dt class="col-sm-">
                    <div class="form-group">
                        <label asp-for="Img" class="control-label">@Localizer["Img"]</label>
                        <input type="file" asp-for="Img" class="form-control" value="@ViewBag.Collection.UrlImg" />
                        <span asp-validation-for="Img" class="text-danger"></span>
                    </div>
                </dt>
                <dd class="col-sm-10">
                    <img src="@ViewBag.Collection.UrlImg" alt="Image" style="width: 150px; height: 220px;" />
                </dd>
            </dl>*@
        <div>
            <button type="submit" class="btn btn-primary mt-1">@Localizer["Create"]</button>
        </div>
    </div>
</form>